<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('head.ejs') %>
</head> 
<body>
    <%- include('header.ejs') %>
    <main>
        <section>
            <div class="form-body">
                <form action="/resetPasswordForm" method="post" class=" form reset-form">
                    <div>
                        <h4>Reset Password</h4>
                    </div>
                    <div class="form-group" >
                        <input type="password" name="password" placeholder="New password" minlength="8">
                    </div>
                    <div class="form-group" >
                        <input type="email" name="email" value="<%= email %>" hidden>
                    </div>
                    <button type="submit" class="btn btn-dark">Reset Password</button>
                </form>
            </div>
        </section>
        <%- include('footer.ejs') %>
    </main>
</body>
</html>