<!DOCTYPE html>
<html lang="en">
<%- include('head.ejs') %>

<body>
    <%- include('header.ejs') %>
    
    <section class="productList PrdtPg">
        <div class="container containerProduct">
            <div class="card col-12 col-md-6 col-lg-6 minicard" style="width: 18rem;">
                
                <img src="/uploads/<%= product.pathOfImage %>" class="card-img-top" alt="">
                <div class="card-body">
                    <h3 class="card-title"> <%= product.name %></h3>
                    <p class="card-text"> <%= product.description %></p>
                    <p class="card-text"> <%= product.price %> SEK</p>
                    <span class="buyBtn">
                
                        <input type="submit" value="Take me home" class="buybtn">
                    </span>
                </div>
            </div>
        </div>
</section >
<%- include('footer.ejs') %>
</body>
</html>